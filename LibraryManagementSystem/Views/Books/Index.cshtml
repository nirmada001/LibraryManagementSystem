@{
}
@model IEnumerable<LibraryManagementSystem.Models.Book>

<h1>Library Books</h1>

<a href="/Books/Create">Add New Book</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Availability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@(book.IsAvailable ? "Available" : "Borrowed")</td>
            </tr>
        }
    </tbody>
</table>